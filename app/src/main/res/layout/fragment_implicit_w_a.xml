<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentImplicitWA">

    <TextView
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Implicit Intent WhatsApp Send Message"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/et_wa_nomer"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:background="#FFFFFF"
        android:hint="Input Nomer Tujuan"
        android:inputType="number"
        android:outlineSpotShadowColor="#000000"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_wa_pesan"
        android:layout_width="256dp"
        android:layout_height="128dp"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:hint="Input Pesan"
        android:inputType="text"
        android:outlineSpotShadowColor="#000000"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_wa_nomer" />

    <Button
        android:id="@+id/btn_wa"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_next"
        android:elevation="8dp"
        android:text="Kirim via WhatsApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_wa_pesan" />
</androidx.constraintlayout.widget.ConstraintLayout>